        <div class="col-md-6"> 
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Add Food</h5>
              <form action="http://localhost:3000/vendor/<%=id%>/add_food" class="needs-validation" method="post" enctype="multipart/form-data" novalidate>
                <div class="row">
                  <div class="col">
                    <label for="availability" class="form-label">Available Status</label>
                    <select class="form-select form-select-lg mb-3 acctype" aria-label="Large select example" required id="availability" name="availability">
                      <option selected disabled>Status</option>
                      <option  value="Yes">Yes</option>
                      <option value="No">NO</option>
                    </select>
                    <div class="invalid-feedback">Please set the available staus.</div>
                  </div>
                </div>
                
                <div class="mb-3">
                  <label for="foodtitle" class="form-label">Enter the food title</label>
                  <input type="text" class="form-control" id="foodtitle" name="name" required />
                  <div class="invalid-feedback">Please enter the food title.</div>
                </div> 
                <div class="mb-3">
                  <label for="price" class="form-label">Price</label>
                  <input type="text" class="form-control" id="price" name="price" required />
                  <div class="invalid-feedback">Please enter the price.</div>
                </div>
                <div class="mb-3">
                  <label for="image" class="form-label">Choose the img path</label>
                  <div class="input-group">
                    <input class="form-control form-control-sm" id="image" type="file" name="image" aria-describedby="basic-addon4" required>
                  </div>
                  <div class="form-text" id="basic-addon4">img only.</div>
                  <div class="invalid-feedback">Please choose an image file.</div>
                </div>
                <div class="row"><div class="col-12">
                  <div class="input-group" >
                    <span class="input-group-text">Share the ingredient </span>
                    <textarea class="form-control" aria-label="With textarea" name="ingredient"></textarea>
                  </div>
                </div></div>
                <div class="row">
                  <div class="col-12"> <!-- Full-width column -->
                    <button type="submit" class="btn btn-primary btn-lg w-100">Submit</button> <!-- Full-width button -->
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    

<!-- .................js for check vailadtor............... -->

    <script>
        // Bootstrap form validation script
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>


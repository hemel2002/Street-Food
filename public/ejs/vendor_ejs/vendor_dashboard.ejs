<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vendor Dashboard</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="../css/vendor_dashboard.css">
    <link href="../../css/vendor.css" rel="stylesheet"> <!-- Link to your custom CSS file -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<!-- ..................adding navbar......................... -->

<%- include('navbar') %>

    <body>





        <section id="dashboard-section" class="mt-5">
            <div class="container-fluid bg-dark text-light py-5">
                <div class="row justify-content-center">
                    <div class="col-md-8 text-center">
                        <h1 class="mt-4">Welcome to Vendor Dashboard</h1>
                        <p class="lead">Manage your food items, track customer reviews and ratings, and monitor your
                            performance all in one place. Use this dashboard to stay updated with your business metrics
                            and make informed decisions.</p>
                    </div>
                </div>
            </div>
        </section>

        <div class="row">
            <div class="col-lg-3 col-md-6">
                <div class="card text-white bg-primary mb-3 shadow-card">
                    <div class="card-header">Food items</div>
                    <div class="card-body">
                        <h5 class="card-title">15 foods</h5>
                        <p class="card-text">View all food items</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="card text-white bg-success mb-3 shadow-card">
                    <div class="card-header">Rating</div>
                    <div class="card-body">
                        <h5 class="card-title">50 customers</h5>
                        <p class="card-text">View and manage your ratings.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="card text-white bg-warning mb-3 shadow-card">
                    <div class="card-header">Customers</div>
                    <div class="card-body">
                        <h5 class="card-title">20 New Customers visited</h5>
                        <p class="card-text">See customers</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="card text-white bg-danger mb-3 shadow-card">
                    <div class="card-header">Reviews</div>
                    <div class="card-body">
                        <h5 class="card-title">5 Reviews</h5>
                        <p class="card-text">View your sales and performance reviews.</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-12">
                <div class="card bg-light mb-3 shadow-card">
                    <div class="card-header">Rating Chart</div>
                    <div class="card-body">
                        <canvas id="ratingChart"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="card bg-light mb-3 shadow-card">
                    <div class="card-header">Reviews Chart</div>
                    <div class="card-body">
                        <canvas id="reviewsChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6 col-md-12">
                <div class="card bg-light mb-3 shadow-card">
                    <div class="card-header">Customer Visits Chart</div>
                    <div class="card-body">
                        <canvas id="customerVisitsChart"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="card bg-light mb-3 shadow-card">
                    <div class="card-header">Hygiene Maintenance Chart</div>
                    <div class="card-body">
                        <canvas id="hygieneChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        </div>
        </div>
        <!-- /#page-content-wrapper -->
        </div>
        <!-- .......................................footer............................... -->



        <%- include('footer') %>


            <!-- /#wrapper -->

            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
            <script src="./"></script>
            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
            <script>
                $("#menu-toggle").click(function (e) {
                    e.preventDefault();
                    $("#wrapper").toggleClass("toggled");
                });

                // Chart.js scripts for the charts
                var ctx1 = document.getElementById('ratingChart').getContext('2d');
                var ratingChart = new Chart(ctx1, {
                    type: 'bar',
                    data: {
                        labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July'],
                        datasets: [{
                            label: 'Ratings',
                            data: [12, 19, 3, 5, 2, 3, 7],
                            backgroundColor: 'rgba(54, 162, 235, 0.2)',
                            borderColor: 'rgba(54, 162, 235, 1)',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });

                var ctx2 = document.getElementById('reviewsChart').getContext('2d');
                var reviewsChart = new Chart(ctx2, {
                    type: 'line',
                    data: {
                        labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July'],
                        datasets: [{
                            label: 'Reviews',
                            data: [3, 2, 2, 6, 3, 4, 8],
                            backgroundColor: 'rgba(255, 206, 86, 0.2)',
                            borderColor: 'rgba(255, 206, 86, 1)',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });

                var ctx3 = document.getElementById('customerVisitsChart').getContext('2d');
                var customerVisitsChart = new Chart(ctx3, {
                    type: 'pie',
                    data: {
                        labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July'],
                        datasets: [{
                            label: 'Customer Visits',
                            data: [12, 15, 10, 14, 9, 10, 13],
                            backgroundColor: [
                                'rgba(255, 99, 132, 0.2)',
                                'rgba(54, 162, 235, 0.2)',
                                'rgba(255, 206, 86, 0.2)',
                                'rgba(75, 192, 192, 0.2)',
                                'rgba(153, 102, 255, 0.2)',
                                'rgba(255, 159, 64, 0.2)',
                                'rgba(201, 203, 207, 0.2)'
                            ],
                            borderColor: [
                                'rgba(255, 99, 132, 1)',
                                'rgba(54, 162, 235, 1)',
                                'rgba(255, 206, 86, 1)',
                                'rgba(75, 192, 192, 1)',
                                'rgba(153, 102, 255, 1)',
                                'rgba(255, 159, 64, 1)',
                                'rgba(201, 203, 207, 1)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });

                var ctx4 = document.getElementById('hygieneChart').getContext('2d');
                var hygieneChart = new Chart(ctx4, {
                    type: 'radar',
                    data: {
                        labels: ['Cleanliness', 'Food Quality', 'Service', 'Ambiance', 'Value for Money'],
                        datasets: [{
                            label: 'Hygiene Maintenance',
                            data: [5, 9, 3, 5, 2],
                            backgroundColor: 'rgba(153, 102, 255, 0.2)',
                            borderColor: 'rgba(153, 102, 255, 1)',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
            </script>
    </body>

</html>
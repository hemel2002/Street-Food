<<!-- Main Content -->
<main>
  <div class="text-center mt-5">
    <h1>Total videos: <span id="food-count"><%= videos.length %></span></h1>
  </div>
  <div class="album py-5 bg-body-tertiary">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3" id="food-list">
        <!-- Video Cards -->
        <% for (let i = (currentPage - 1) * 6; i < Math.min(currentPage * 6, videos.length); i++) { %>
          <div class="col mb-4">
            <div class="card video-card">
              <div class="embed-responsive embed-responsive-16by9">
                <video class="embed-responsive-item w-100" controls>
                  <source src="<%= videos[i].VIDEO_LINKS %>" type="video/mp4">
                  Your browser does not support the video tag.
                </video>
              </div>
              <div class="card-body">
                <h5 class="card-title"><%= videos[i].VIDEO_TITLE %></h5>
                <p class="card-text"><%= videos[i].VIDEO_DESCRIPTION %></p>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal<%= i %>">Launch demo modal</button>
              </div>
            </div>
          </div>

          <!-- Modal -->
          <div class="modal fade" id="exampleModal<%= i %>" tabindex="-1" aria-labelledby="exampleModalLabel<%= i %>" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg">
              <div class="modal-content">
                <div class="modal-header">
                  <div class="w-100">
                    <h5 class="modal-title" id="exampleModalLabel<%= i %>"><%= videos[i].VIDEO_TITLE %></h5>
                  </div>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex flex-column align-items-center">
                  <video class="fixed-size-video mb-3 rounded" controls>
                    <source src="<%= videos[i].VIDEO_LINKS %>" type="video/mp4">
                    Your browser does not support the video tag.
                  </video>
                  <div class="d-flex justify-content-between w-100">
                    <div>
                      <button type="button" class="btn btn-primary mb-2">Visit Shop</button>
                      <p><%= videos[i].VIDEO_DESCRIPTION %></p>
                    </div>
                    <div>
                      <p><%= videos[i].TAGS %></p>
                      <button type="button" class="btn btn-secondary mb-2">Show on Map</button>
                    </div>
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>
        <% } %>
      </div>
      <!-- Pagination -->
      <div class="d-flex justify-content-center mt-4">
        <nav aria-label="Pagination example">
          <ul class="pagination pagination-lg">
            <!-- Previous Button -->
            <li class="page-item <%= currentPage <= 1 ? 'disabled' : '' %>">
              <a class="page-link" href="?page=<%= Math.max(currentPage - 1, 1) %>" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
              </a>
            </li>

            <!-- Page Numbers -->
            <% for (let i = 1; i <= totalPages; i++) { %>
              <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                <a class="page-link" href="?page=<%= i %>"><%= i %></a>
              </li>
            <% } %>

            <!-- Next Button -->
            <li class="page-item <%= currentPage >= totalPages ? 'disabled' : '' %>">
              <a class="page-link" href="?page=<%= Math.min(currentPage + 1, totalPages) %>" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>

  <!-- Add New Button -->
  <div class="container text-center">
    <a href="/user/<%= id %>/upload_video">
      <button type="button" class="btn btn-primary btn-lg">Add new Video!</button>
    </a>
    <br><br>
  </div>
</main>


<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Profile</title>
    <!-- MDB CSS -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.3.0/mdb.min.css"
    />
    <!-- Font Awesome for Icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
    />
    <!-- Custom CSS -->
    <style>
      .edit-profile-header {
        background-color: #ff5722;
        color: white;
        padding: 50px 0;
        text-align: center;
        border-radius: 0 0 50% 50%;
      }

      .edit-profile-form {
        margin-top: 50px;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
      }

      .form-control {
        margin-top: 40px;
        margin-bottom: 40px;
      }

      .btn-update {
        width: 100%;
        background-color: #ff5722;
        margin-top: 30px;
      }

      .form-section {
        padding: 30px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        border-radius: 15px;
      }

      .profile-picture {
        border-radius: 50%;
        border: 5px solid white;
        width: 100px;
        height: 100px;
        object-fit: cover; /* Ensure the image fits the circle */
      }
    </style>
  </head>
  <body>
    <nav class="navbar">
      <div class="container-fluid">
          <button class="navbar-toggler danger" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbarLight"
              aria-controls="offcanvasNavbarLight" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
          </button>
      </div>
  </nav>
  
  <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbarLight"
      aria-labelledby="offcanvasNavbarLightLabel">
      <div class="offcanvas-header">
          <h5 class="offcanvas-title" id="offcanvasNavbarLightLabel">Street Food Management</h5>
          <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body">
          <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
              <li class="nav-item">
                  <a class="nav-link active" aria-current="page" href="/home">Home</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link"
                      href="/<%= id[0] === 'U' ? 'user' : id[0] === 'A' ? 'admin' : 'vendor' %>/<%= id %>/profile">
                      Profile
                  </a>
              </li>
              <li class="nav-item">
                <% if (id[0]==='V') { %>
                  <a class="nav-link" href="/vendor/<%= id %>/dashboard">Dashboard</a>
              <% } %>
              </li>
              <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                      aria-expanded="false">
                      Settings
                  </a>
                  <ul class="dropdown-menu">
                      <li><a class="dropdown-item"
                              href="/<%= id[0] === 'U' ? 'user' : id[0] === 'A' ? 'admin' : 'vendor' %>/<%= id %>/edit_profile">Edit
                              Profile</a></li>
                      <li>
                          <hr class="dropdown-divider">
                      </li>
                  </ul>
              </li>
          </ul>
          <form action="/<%= id[0] === 'U' ? 'user' : id[0] === 'A' ? 'admin' : 'vendor' %>/<%= id %>/navbar"
              method="post">
              <div class="dropdown">
                  <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
                      aria-expanded="false">
                      Switch mode!
                  </button>
                  <ul class="dropdown-menu">
                      <li>
                          <button type="submit" class="dropdown-item d-flex align-items-center" name="mode"
                              value="light">
                              Light Mode
                          </button>
                      </li>
                      <li>
                          <button type="submit" name="mode" value="dark" class="dropdown-item d-flex align-items-center">
                              Dark Mode
                          </button>
                      </li>
                  </ul>
              </div>
          </form>
          <form action="/<%= id[0] === 'U' ? 'user' : id[0] === 'A' ? 'admin' : 'vendor' %>/<%= id %>/logout"
              method="post">
              <ul class="navbar-nav mt-3">
                  <div class="col-12">
                      <button type="submit" class="btn btn-primary btn-lg w-100">Logout</button>
                  </div>
              </ul>
          </form>
      </div>
  </div>
    <!-- Edit Profile Header -->
    <section class="edit-profile-header" id="edit-profile-header">
      <h1 class="mb-0">Edit Profile</h1>
    </section>

    <!-- Edit Profile Form -->
    <div class="container edit-profile-form">
      <div class="form-section" id="edit-form">
        <form
          id="profileForm"
          class="needs-validation"
          action="/user/<%= id %>/edit_profile"
          method="post"
          enctype="multipart/form-data"
          novalidate
        >
          <div class="text-center">
            <img
              src="<%= userdata?.PROFILE_PIC??'https://via.placeholder.com/100' %>"
              alt="Profile Picture"
              class="profile-picture mb-4"
              id="profile-picture"
            />
            <br />
            <!-- Add icon button for image upload inside the form -->
            <button
              class="btn btn-light"
              id="uploadBtn"
              type="button"
              onclick="document.getElementById('fileInput').click();"
            >
              <i class="fa fa-camera"></i> Upload Image
            </button>
            <input
              type="file"
              id="fileInput"
              style="display:none;"
              accept="image/*"
              name="profileImage"
              onchange="previewImage(event)"
            />
          </div>

          <div class="row">
            <div class="col-6">
              <div class="form-outline">
                <input
                  type="text"
                  id="FirstName"
                  class="form-control"
                  value="<%= userdata?.FIRST_NAME??'' %>"
                  name="FIRST_NAME"
                  required
                />
                <label class="form-label" for="FirstName">First Name</label>
              </div>
            </div>
            <div class="col-6">
              <div class="form-outline">
                <input
                  type="text"
                  id="LastName"
                  class="form-control"
                  value="<%= userdata?.LAST_NAME??'' %>"
                  name="LAST_NAME"
                  required
                />
                <label class="form-label" for="LastName">Last Name</label>
              </div>
            </div>
          </div>

          <div class="form-outline">
            <input
              type="email"
              id="email"
              class="form-control"
              value="<%= userdata?.EMAIL??'' %>"
              readonly
              required
            />
            <label class="form-label" for="email">Email</label>
          </div>

          <div class="form-outline">
            <input
              type="text"
              id="phone"
              class="form-control"
              value="<%= userdata?.PHONE??'' %>"
              name="PHONE"
              required
              pattern="^\+?\d{10,}$"
            />
            <label class="form-label" for="phone">Phone Number</label>
          </div>

          <button
            type="submit"
            class="btn btn-primary btn-update"
            id="btn-update"
          >
            Update Profile
          </button>
        </form>
      </div>
    </div>

    <!-- MDB JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.3.0/mdb.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>


    <!-- Image preview script -->
    <script>
      function previewImage(event) {
        const reader = new FileReader();
        reader.onload = function () {
          const output = document.getElementById('profile-picture');
          output.src = reader.result;
        };
        reader.readAsDataURL(event.target.files[0]);
      }
    </script>
  </body>
</html>
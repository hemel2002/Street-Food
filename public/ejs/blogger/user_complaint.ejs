<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Submit Complaint</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.css">
    <style>
        body {
            background-color: #f5f5f5;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            border-radius: 15px;
        }

        .bg-image {
            height: 300px;
            /* Increased height for better visibility */
            background-size: cover;
            background-position: center;
        }
    </style>
</head>

<body>
    <section draggable="false" class="overflow-hidden pt-0">
        <section class="mb-10">
            <div class="p-5 text-center bg-image" style="background-image: url('<%= specificVendorId.STALL_PIC %>')"
                aria-controls="#picker-editor" alt="Background Image"></div>
            <div class="container">
                <div class="card mx-4 mx-md-5 text-center shadow-5-strong"
                    style="margin-top: -150px; background: hsla(0, 0%, 100%, 0.7); backdrop-filter: blur(30px);">
                    <div class="card-body px-4 py-5 px-md-5">
                        <h1 class="display-3 fw-bold ls-tight mb-4">
                            <span>Submit Your Complaint</span>
                            <br />
                            <span class="text-primary">to the Vendor</span>
                        </h1>
                        <form action="/user/<%= id %>/complaint" method="post" novalidate>

                            <div class="form-outline mb-4" data-mdb-input-init>
                                <input type="text" class="form-control" id="vendorSearch" placeholder="Search vendor"
                                    list="vendor-list" name="V_ID" value="<%= specificVendorId.V_ID %>" readonly
                                    required>
                                <label for="vendorSearch" class="form-label">Available Vendors</label>
                                <div class="invalid-feedback">Please select the vendor.</div>
                            </div>

                            <div class="form-outline mb-4" data-mdb-input-init>
                                <input type="text" id="subject" class="form-control" name="subject"
                                    placeholder="Complaint subject" required>
                                <label for="subject" class="form-label">Subject</label>
                                <div class="invalid-feedback">Subject is required.</div>
                            </div>
                            <div class="form-outline mb-4" data-mdb-input-init>
                                <textarea id="description" class="form-control" rows="6"
                                    placeholder="Describe your complaint in detail" name="complaint"
                                    required></textarea>
                                <label for="description" class="form-label">Description</label>
                                <div class="invalid-feedback">Description is required.</div>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-success btn-lg py-3 px-5 mb-2 mb-md-0 me-md-2"
                                    style="min-width: auto">Submit <i class="fas fa-paper-plane p-1 ps-2"></i></button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </section>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.js"></script>
    <script>
        // Initialize MDB input elements
        document.addEventListener('DOMContentLoaded', function () {
            mdb.Input.init();
        });

        // Form validation
        (() => {
            'use strict';

            const forms = document.querySelectorAll('form');

            Array.prototype.slice.call(forms).forEach((form) => {
                form.addEventListener('submit', (event) => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }

                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
</body>

</html>